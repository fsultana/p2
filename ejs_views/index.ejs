<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <!-- <link rel="stylesheet" type="text/css" href="index.css"> -->
        <title>User Registration</title>

        <style>
        .table td{
            text-align: justify !important;
        }


        </style>
    </head> 
	
    <body>
        <div class="jumbotron container">
        <h2 align="center">User Registration Page</h2>

		<form action="/" method="POST">
			<table class="table table-striped">
			<tbody>
				<tr>
					<td align="right">Email:</td>
					<td><input type="text" name="email" value="<%= locals.email %>"></td>
					<td><% if( typeof locals.email !== "undefined" && locals.email.indexOf("@") < 0 ){ %><font style="color: red;">@ is required</font><% } %></td>
				</tr>
				<tr>
					<td align="right">Password:</td>
					<td><input type="password" name="password" value="<%= locals.password %>"></td>
                    <td><% if( typeof locals.password !== "undefined" && locals.password.length < 4 ){
                         %><font style="color: red;">min 4 chars</font><% } %></td>
				</tr>
				<tr>
					<td align="right">Programming Skills:</td>
					<td>
						
					</td>
					<td></td>
				</tr>
				<tr>
					<td align="right">Major</td>
					
					<td></td>
				</tr>
				<tr>
					<td align="right">Residency</td>
					<td>
						<select name="city">
						
						</select>
					</td>
					<td></td>
				</tr>
				<tr>
					<td></td>
					<td>
						<button type="submit" class="btn btn-primary">Register</button>
					</td>
				</tr>
			</tbody>
			</table>
		</form>

        </div> <!-- jumbotron -->
    
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
